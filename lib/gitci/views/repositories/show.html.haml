%h1
  =@repository.name

Git Repository
%a(href="#{@repository.uri}")
  =@repository.uri

-if @repository.has_gemfile
  %pre{:style => "background: #bbb"}
    =@repository.bundle_output

%form(action="/repositories/#{@repository.id}/scripts" method="post" name="create-script-form")
  .field
    %label
      Command
    %textarea(name='script[command]')
  .field.buttons
    %input(type='submit' value='Add script')

%ul
  -@repository.scripts.each do |script|
    %li
      =h script.command
      %a(href="/repositories/#{@repository.id}/scripts/#{script.id}/delete")
        delete
      %ul
        -script.build_tasks.where(:performed => true).order(:created_at.desc).limit(20).each do |task|
          %li
            =haml :"repositories/_task.html", :locals => {:task => task}


