!!! 5
%html
  %head
    %title
      =@title||"Gitci"
    %script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js")
    %script(src="/javascripts/application.js")
    %script(src="/javascripts/bootstrap/bootstrap-dropdown.js")
    %script(src="/javascripts/bootstrap/bootstrap-tooltips.js")
    %script(src="/javascripts/bootstrap/bootstrap-botton.js")
    %script(src="/javascripts/bootstrap/bootstrap-collapse.js")
    %script(src="/javascripts/bootstrap/bootstrap-modal.js")
    %link(href="/stylesheets/bootstrap.min.css" media="screen" rel="stylesheet" type="text/css")
    %link(href="/stylesheets/bootstrap-responsive.min.css" media="screen" rel="stylesheet" type="text/css")
    %link(href="/stylesheets/application.css" media="screen" rel="stylesheet" type="text/css")


    %meta(name="viewport" content="width=device-width, initial-scale=1.0")

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a(class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse")
            span.icon-bar
            span.icon-bar
            span.icon-bar

          %a(class="brand" href="/")
            GitCI

          .nav-collapse
            %ul.nav
              %li
                %a(href="/")
                  Home
              %li
                %a.add_repository(href="/repositories/new")
                  Add Repository

              %li
                %a(href="/")
                  Contact


    .container-fluid
      .row-fluid
        .span3
          .well.sidebar-nav
            %ul.nav.nav-list
              %li.nav-header
                Repositories
        .span9
          = yield
