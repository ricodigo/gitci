!!! 5
%html
  %head
    %title
      =@title||"Gitci"
    %script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js")
    %script(src="/javascripts/application.js")
    %script(src="/javascripts/bootstrap-dropdown.js")
    %script(src="/javascripts/bootstrap-tooltip.js")
    %script(src="/javascripts/bootstrap-button.js")
    %script(src="/javascripts/bootstrap-collapse.js")
    %script(src="/javascripts/bootstrap-modal.js")
    %script(src="/javascripts/bootstrap-tab.js")
    %link(href="/stylesheets/bootstrap.min.css" media="screen" rel="stylesheet" type="text/css")
    %link(href="/stylesheets/bootstrap-responsive.min.css" media="screen" rel="stylesheet" type="text/css")
    %link(href="/stylesheets/application.css" media="screen" rel="stylesheet" type="text/css")
    %link(rel="shortcut icon" href="/img/favicon.ico")

    %meta(name="viewport" content="width=device-width, initial-scale=1.0")

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a(class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar

          %a(class="brand" href="/")
            %span.integration
              ∮
              .plus
                +
              .minus
                \-
            %span
              GitCI

          .nav-collapse
            %ul.nav
              %li
                %a(href="/")
                  Home
              %li
                %a(href="/repositories/new" data-target="#newRepository" data-toggle="modal")
                  Add Repository

              %li
                %a(href="/")
                  Contact

    #newRepository.modal.fade.hide{style: "display:none"}
      %form(action="/repositories" method="post" name="edit-repository" class="well")
        .modal-header
          %a.close(data-dismiss="modal")
            ×
          %h3
            Add Repository

        .modal-body
          = haml :"repositories/_form.html", layout: false

        .modal-footer
          %input(type='submit' value='Add' class="btn btn-primary")
          %a.btn(href="#" data-dismiss="modal")
            Close

    .container-fluid
      .row-fluid
        .span12
          = yield
